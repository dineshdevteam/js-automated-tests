{
  "name": "js-factorial",
  "version": "1.0.0",
  "description": "An HTML5 app to calculate factorial from a given number",
  "main": "index.js",
  "scripts": {
    "preinstall": "npm i -g http-server && npm i -g karma-cli",
    "test": "karma start karma.conf.js --single-run --browsers PhantomJS",
    "tdd": "karma start karma.conf.js --browsers FirefoxDeveloper --reporters progress",
    "test-crossbrowser": "karma start karma.conf.js --single-run --browsers Chrome,Firefox,IE",
    "start": "http-server app/ -p 8081"
  },
  "author": "Edy Segura",
  "license": "ISC",
  "devDependencies": {
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-fixture": "^0.2.6",
    "karma-html2js-preprocessor": "^1.0.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "phantomjs-prebuilt": "^2.1.7"
  }
}
